<Window x:Class="PavlovProjectManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PavlovProjectManager"
        mc:Ignorable="d"
        Title="Pavlov Project Manager" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/pavlov-vr.png" Stretch="Fill"/>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="NoConnectMsg" HorizontalAlignment="Center" Text="No Internet! Please connect and hit 'Try Again'" TextWrapping="Wrap" VerticalAlignment="Center" Height="103" Width="572" FontSize="36" TextAlignment="Center" IsEnabled="False" Visibility="Hidden"/>
        <Button x:Name="TryConnButton" Content="Try Again" HorizontalAlignment="Center" Margin="0,296,0,0" VerticalAlignment="Top" Height="34" Width="122" FontSize="16" Click="Button_Click" Visibility="Hidden"/>
        <TextBlock x:Name="StartingStatus" HorizontalAlignment="Center" Margin="0,376,0,0" Text="Status" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="780" FontSize="18" TextAlignment="Center" Foreground="#FF9AFF9C"/>

    </Grid>
</Window>
